<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/SetupHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enhedens navn"
                android:textIsSelectable="false" />

            <TextView
                style="@style/SetupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angiv venligst et navn til denne enhed"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/input_unit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:hint="Enhedens navn"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/setup_back" />

        <Button
            android:id="@+id/button_continue"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/setup_continue" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/cyrix/turios/turios/src/main/res/layout/setup_welcome.xml -->